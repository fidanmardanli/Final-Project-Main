@model Slider
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mx-5 my-3">
    <h3>Update Slider</h3>
    <div class="img-area">
  
        <img src="~/assets/img/@Model.ImageFirst" style="width:200px; heigth:200px;" />
    </div>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="ImageFirst" type="file">
            <span class="text-danger" asp-validation-for="ImageFirst"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Slider" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>