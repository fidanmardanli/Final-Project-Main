@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mx-5 my-3">
    <h3>Create Product</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">

            <label for="Fullname">Image</label>
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>

            <label for="Name">Name</label>
            <input class="form-control" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"> </span>

           


        </div>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>



